<Window x:Class="ProAcqDb.TimeStamp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProAcqDb"
        mc:Ignorable="d"
        Title="TimeStamp" Height="105" Width="122" ResizeMode="NoResize" WindowStyle="ToolWindow" Topmost="True" Closing="Window_Closing" >
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="0"/>
                <GradientStop Color="#FF43FF19" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Label x:Name="label" Content="Init" HorizontalAlignment="Left" Margin="-1,-1,0,0" VerticalAlignment="Top" Width="105" Height="40" Foreground="White" HorizontalContentAlignment="Center" VerticalContentAlignment="Stretch" FontSize="24" Background="{x:Null}"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Center" Height="20" Margin="0,42,0,0" TextWrapping="Wrap" Text="memo" VerticalAlignment="Top" Width="100" FontSize="10" Background="White" BorderThickness="0"/>

    </Grid>
</Window>
